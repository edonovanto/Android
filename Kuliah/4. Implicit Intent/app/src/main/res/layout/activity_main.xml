<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Call"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Call"
            android:onClick="actionCall"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Send Message"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edtMessageTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/edtMessageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message Body"
            android:inputType="text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Send"
            android:onClick="actionSendMessage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Open Browser"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edtLinkAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message Body"
            android:inputType="text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Open Browser"
            android:onClick="actionLinkAddress"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>